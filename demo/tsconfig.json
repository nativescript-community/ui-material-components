{
    "extends": "../tsconfig",
    "compilerOptions": {
        "target": "es2017",
        "module": "esnext",
        "declaration": false,
        "removeComments": false,
        "noLib": false,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "lib": [
            "es6",
            "dom",
            "es2017"
        ],
        "pretty": true,
        "allowUnreachableCode": false,
        "allowUnusedLabels": false,
        "noEmitHelpers": true,
        "noEmitOnError": false,
        "noImplicitAny": false,
        "noImplicitReturns": true,
        "noImplicitUseStrict": false,
        "noFallthroughCasesInSwitch": true,
        "baseUrl": ".",
        "paths": {
            "*": [
                "./node_modules/*"
            ],
            "~/*": [
                "app/*"
            ]
        },
        "moduleResolution": "node"
    },
    "exclude": [
        "node_modules",
        "platforms",
        "**/angular"
    ],
    "compileOnSave": false
}