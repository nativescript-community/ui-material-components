{
    "packages": [
        "packages/*"
    ],
    "npmClient": "npm",
    "command": {
        "publish": {
            "conventionalCommits": true,
            "ignoreChanges": [
                "ignored-file",
                "*.md"
            ],
            "message": "chore(release): publish"
        },
        "bootstrap": {
            "npmClientArgs": [
                "--no-package-lock"
            ]
        }
    },
    "version": "4.0.3"
}
