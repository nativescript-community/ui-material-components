{
    "compilerOptions": {
        "target": "es2017",
        "module": "esnext",
        "moduleResolution": "node",
        "removeComments": true,
        "noLib": false,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "lib": ["es6", "dom"],
        "sourceMap": true,
        "pretty": true,
        "allowUnreachableCode": false,
        "allowUnusedLabels": false,
        "noEmitHelpers": true,
        "noEmitOnError": false,
        "noImplicitAny": false,
        "noImplicitReturns": true,
        "noImplicitUseStrict": true,
        "noFallthroughCasesInSwitch": true,
        "skipDefaultLibCheck": true,
        "skipLibCheck": true,
        "sourceRoot": "../src",
        "baseUrl": ".",
        "outDir": "./plugin",
        "paths": {
            "tns-core-modules": ["./node_modules/@nativescript/core"],
            "tns-core-modules/*": ["./node_modules/@nativescript/core/*"],
            "@nativescript-community/ui-material-activityindicator": ["src/activityindicator/index"],
            "@nativescript-community/ui-material-activityindicator/*": ["src/activityindicator/*"],
            "@nativescript-community/ui-material-bottomnavigationbar": ["src/bottomnavigationbar/bottomnavigationbar"],
            "@nativescript-community/ui-material-bottomnavigationbar/*": ["src/bottomnavigationbar/*"],
            "@nativescript-community/ui-material-bottom-navigation": ["src/bottom-navigation/index"],
            "@nativescript-community/ui-material-bottom-navigation/*": ["src/bottom-navigation/*"],
            "@nativescript-community/ui-material-button": ["src/button/button"],
            "@nativescript-community/ui-material-button/*": ["src/button/*"],
            "@nativescript-community/ui-material-bottomsheet": ["src/bottomsheet/bottomsheet"],
            "@nativescript-community/ui-material-bottomsheet/*": ["src/bottomsheet/*"],
            "@nativescript-community/ui-material-cardview": ["src/cardview/cardview"],
            "@nativescript-community/ui-material-cardview/*": ["src/cardview/*"],
            "@nativescript-community/ui-material-core": ["src/core/index"],
            "@nativescript-community/ui-material-core/*": ["src/core/*"],
            "@nativescript-community/ui-material-dialogs": ["src/dialogs/dialogs"],
            "@nativescript-community/ui-material-dialogs/*": ["src/dialogs/*"],
            "@nativescript-community/ui-material-floatingactionbutton": ["src/floatingactionbutton/floatingactionbutton"],
            "@nativescript-community/ui-material-floatingactionbutton/*": ["src/floatingactionbutton/*"],
            "@nativescript-community/ui-material-progress": ["src/progress/progress"],
            "@nativescript-community/ui-material-ripple": ["src/ripple/ripple"],
            "@nativescript-community/ui-material-ripple/*": ["src/ripple/*"],
            "@nativescript-community/ui-material-progress/*": ["src/progress/*"],
            "@nativescript-community/ui-material-slider": ["src/slider/slider"],
            "@nativescript-community/ui-material-slider/*": ["src/slider/*"],
            "@nativescript-community/ui-material-snackbar": ["src/snackbar/snackbar"],
            "@nativescript-community/ui-material-snackbar/*": ["src/snackbar/*"],
            "@nativescript-community/ui-material-tabs/*": ["src/tabs/*"],
            "@nativescript-community/ui-material-tabs": ["src/tabs/tabs"],
            "@nativescript-community/ui-material-textfield": ["src/textfield/textfield"],
            "@nativescript-community/ui-material-textfield/*": ["src/textfield/*"],
            "@nativescript-community/ui-material-textview": ["src/textview/textview"],
            "@nativescript-community/ui-material-textview/*": ["src/textview/*"],
            "@nativescript-community/ui-material-speeddial": ["src/speeddial/index"],
            "@nativescript-community/ui-material-speeddial/*": ["src/speeddial/*"],
            "*": ["node_modules/*"]
        },
        "plugins": [{ "transform": "@nativescript/webpack/dist/transformers/NativeClass", "type": "raw" }]
    },
    "include": ["src/**/*", "./references.d.ts"],
    "exclude": ["node_modules", "platforms", "dist", "packages"],
    "compileOnSave": false
}
